---
env:
  TERM: {{ shell.term }}

window:
  dimensions:
    columns: {{ alacritty.cols }}
    lines: {{ alacritty.lines }}

  padding:
    x: 5
    y: 5

  opacity: {{ alacritty.opacity }}

font:
  normal:
    family: "{{ alacritty.font }}"
    style: Regular

  bold:
    family: "{{ alacritty.font }}"
    style: Bold

  italic:
    family: "{{ alacritty.font }}"
    style: Italic

  bold_italic:
    family: "{{ alacritty.font }}"
    style: Bold Italic

  size: {{ alacritty.font_size }}

  offset:
    x: 0
    y: 1


draw_bold_text_with_bright_colors: true

selection:
  save_to_clipboard: true

mouse_bindings:
  - { mouse: Middle, action: PasteSelection }

key_bindings:
  - { key: Left,     mods: Alt,           chars: "\x1bb"                     } # one word left
  - { key: Right,    mods: Alt,           chars: "\x1bf"                     } # one word right
  - { key: Home,                          chars: "\x1bOH",  mode: AppCursor  } # Home
  - { key: End,                           chars: "\x1bOF",  mode: AppCursor  } # End
  - { key: Key0,     mods: Command,       action: ResetFontSize              }
  - { key: Equals,   mods: Command,       action: IncreaseFontSize           }
  - { key: Minus,    mods: Command,       action: DecreaseFontSize           }
  - { key: Period,   mods: Alt,           chars: "\e."                       }
  - { key: Insert,   mods: Control,       action: Copy                       }
  - { key: Insert,   mods: Shift,         action: Paste                      }
  - { key: 36,       mods: Command,       action: ToggleFullscreen           }
{% if alacritty.use_tmux != false %}
  - { key: N,        mods: Command,       command: { program: "{{ brew_prefix }}/bin/alacritty", args: ["-e", "{{ shell.interactive }}", "--login"] } }
  - { key: T,        mods: Command,       chars: "\x02\x63"                  } # New tab
  - { key: D,        mods: Command,       chars: "\x02\x25"                  } # Split horizontaly
  - { key: D,        mods: Command|Shift, chars: "\x02\x22"                  } # Split verticaly
  - { key: W,        mods: Command,       chars: "\x02\x78"                  } # Close pane/tab
  - { key: Left,     mods: Command|Shift, chars: "\x02\x48"                  } # Resize to left
  - { key: Down,     mods: Command|Shift, chars: "\x02\x4a"                  } # Resize to down
  - { key: Up,       mods: Command|Shift, chars: "\x02\x4b"                  } # Resize to up
  - { key: Right,    mods: Command|Shift, chars: "\x02\x4c"                  } # Resize to right
  - { key: Left,     mods: Command,       chars: "\x02\x68"                  } # Navigate left
  - { key: Down,     mods: Command,       chars: "\x02\x6a"                  } # Navigate down
  - { key: Up,       mods: Command,       chars: "\x02\x6b"                  } # Navigate up
  - { key: Right,    mods: Command,       chars: "\x02\x6c"                  } # Navigate right
  - { key: Key1,     mods: Command,       chars: "\x02\x31"                  } # Tab 1
  - { key: Key2,     mods: Command,       chars: "\x02\x32"                  } # Tab 2
  - { key: Key3,     mods: Command,       chars: "\x02\x33"                  } # Tab 3
  - { key: Key4,     mods: Command,       chars: "\x02\x34"                  } # Tab 4
  - { key: Key5,     mods: Command,       chars: "\x02\x35"                  } # Tab 5
  - { key: Key6,     mods: Command,       chars: "\x02\x36"                  } # Tab 6
  - { key: Key7,     mods: Command,       chars: "\x02\x37"                  } # Tab 7
  - { key: Key8,     mods: Command,       chars: "\x02\x38"                  } # Tab 8
  - { key: Key9,     mods: Command,       chars: "\x02\x39"                  } # Tab 9

shell:
  program: {{ brew_prefix }}/bin/tmux
  args:
    - new-session
    - -A
    - -D
    - -s
    - main
{% else %}

shell:
  program: {{ shell.interactive }}
  args:
    - --login
{% endif %}

live_config_reload: true

import:
  - ~/.config/alacritty/themes/{{ alacritty.theme }}.yml
