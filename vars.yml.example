---
user:
  login: foobar
  email: john@doe.org
  full_name: John Doe
  group: staff

font_smoothing: 0
editor: vim
shell: /opt/homebrew/bin/zsh
path:
  - /opt/homebrew/bin
  - /opt/homebrew/sbin
  - /opt/homebrew/opt/curl/bin
  - /Users/{{ user.login }}/.dotnet/tools
  - ./node_modules/.bin
  - ${PATH}

aliases:
  - { alias: "u", command: "brew update && brew upgrade && brew autoremove && brew cleanup" }
  - { alias: "la", command: "ls -la" }
  - { alias: "ll", command: "ls -l" }
  - { alias: "resetdock", command: "defaults write com.apple.dock ResetLaunchPad -bool true; killall Dock" }
  - { alias: "renoise", command: "/Applications/Renoise.app/Contents/MacOS/Renoise" }

zsh:
  plugins:
    - git
    - colored-man-pages
    - z
    - tmux

vim:
  colorscheme: desert
  plugins:
    - vim-syntastic/syntastic
    - pearofducks/ansible-vim
    - leafgarland/typescript-vim
    - pangloss/vim-javascript
    - vim-airline/vim-airline
    - junegunn/fzf
    - junegunn/fzf.vim
  rc:
    - let g:go_highlight_types = 1
    - let g:syntastic_always_populate_loc_list = 1
    - let g:syntastic_auto_loc_list = 1
    - let g:syntastic_check_on_open = 1
    - let g:syntastic_check_on_wq = 0
    - let g:ansible_unindent_after_newline = 1
    - let g:ansible_extra_syntaxes = "sh.vim ruby.vim"
    - let g:ansible_attribute_highlight = "ob"
    - let g:ansible_name_highlight = 'd'
    - let g:ansible_extra_keywords_highlight = 1
    - let g:ansible_normal_keywords_highlight = 'Constant'
    - let g:ansible_with_keywords_highlight = 'Constant'
    - let g:syntastic_javascript_checkers = ['eslint']
    - let g:javascript_plugin_jsdoc = 1
    - let g:javascript_plugin_ngdoc = 1
    - map ; :Files<CR>
    - set nocompatible
    - set noshowmode
    - set ttyfast
    - set number
    - set ts=4 sw=4 expandtab smarttab
    - autocmd FileType yaml setlocal ts=2 sw=2
    - autocmd FileType yml setlocal ts=2 sw=2
    - autocmd FileType make setlocal ts=2 sw=2 noexpandtab

network:
  gateway: 192.168.10.1
  nameserver: 192.168.10.250
  subnet: 192.168.10.0/24
  interface: en0

pf:
  skipped_interfaces: ["lo0"]

homebrew:
  packages:
    - convmv
    - cuetools
    - curl
    - dos2unix
    - ffmpeg
    - flac
    - fzf
    - gawk
    - git
    - glances
    - go
    - grep
    - helm
    - hugo
    - jq
    - kind
    - lame
    - lua
    - make
    - midnight-commander
    - minikube
    - moreutils
    - neovim
    - nmap
    - node
    - pandoc
    - python
    - qemu
    - ripgrep
    - rsync
    - shntool
    - sox
    - sqlite
    - telnet
    - tig
    - tmux
    - tree
    - w3m
    - watch
    - wget
    - youtube-dl
    - zsh
    - zsh-completions

  cask_packages:
    - blackhole-16ch
    - calibre
    - discord
    - docker
    - dotnet-sdk
    - firefox
    - iina
    - iterm2
    - keepingyouawake
    - signal
    - suspicious-package
    - the-unarchiver
    - visual-studio-code
